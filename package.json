{
  "name": "world-texting-foundation-api",
  "version": "0.0.0",
  "private": false,
  "scripts": {
    "start": "npm run prod",
    "server": "node ./dist-server/bin/www",
    "dev": "npm-run-all build server",
    "prod": "npm-run-all test mocha-test build server",
    "transpile": "babel ./server --out-dir dist-server",
    "clean": "rimraf dist-server",
    "build": "npm-run-all clean transpile",
    "watch:dev": "nodemon",
    "mocha-test": "mocha --require @babel/polyfill --require @babel/register \"./{,!(node_modules)/**/}*.test.js\"",
    "test": "standard",
    "fix-js": "standard --fix"
  },
  "standard": {
    "ignore": [
      "**/tests/"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*",
      "db/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/node": "^7.12.6",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/register": "^7.12.1",
    "chai": "^4.2.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-status-codes": "^2.1.4",
    "lodash": "^4.17.20",
    "mocha": "^8.2.1",
    "mongodb": "^3.6.3",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "uniqid": "^5.2.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "standard": "^16.0.3"
  }
}
